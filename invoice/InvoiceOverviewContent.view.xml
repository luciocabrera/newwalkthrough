<mvc:View
	controllerName="sap.ui.demo.wt.invoice.InvoiceOverviewContent"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
>
    <Table
        id="invoicesTable"
        items="{invoice>/Invoices}"
				itemPress="onItemPress"
				>
            <headerToolbar>
                <Toolbar>
                    <Title text="{i18n>Invoices}" level="H2"/>
                    <ToolbarSpacer />
                    <SearchField id="searchField"  search="onSearchInvoicesTable" width="50%" />
                    <Button icon="sap-icon://sort" press="onSortButtonPressed" />
                </Toolbar>
            </headerToolbar>
            <columns>
                <Column id="orderIDCol"><Text text="{i18n>OrderID}"/></Column>
								<Column id="customerNameCol" minScreenWidth="Tablet" demandPopin="true"><Text text="{i18n>CustomerName}"/></Column>
                <Column id="salespersonCol" minScreenWidth="Tablet" demandPopin="true"><Text text="{i18n>Salesperson}"/></Column>
                <Column id="productIDCol" demandPopin="true"><Text text="{i18n>ProductID}"/></Column>
                <Column id="productNameCol" demandPopin="true"><Text text="{i18n>ProductName}"/></Column>
								<Column id="unitPriceCol" minScreenWidth="Tablet" demandPopin="true"><Text text="{i18n>UnitPrice}"/></Column>
								<Column id="quantityCol" minScreenWidth="Tablet" demandPopin="true"><Text text="{i18n>Quantity}"/></Column>
								<Column id="discountCol" minScreenWidth="Tablet" demandPopin="true"><Text text="{i18n>Discount}"/></Column>
								<Column id="extendedPriceCol" minScreenWidth="Tablet" demandPopin="true"><Text text="{i18n>ExtendedPrice}"/></Column>
            </columns>
            <items>
                <ColumnListItem type="Active">
                    <cells>
                        <Text text="{invoice>OrderID}" />
												<Text text="{invoice>CustomerName}" />
                        <Text text="{invoice>Salesperson}" />
                        <Text text="{invoice>ProductID}" />
                        <Text text="{invoice>ProductName}" />
												<Text text="{
													parts: [                
														{path: 'invoice>UnitPrice'},
														{path: 'formatter/currency'}
														],
														type: 'sap.ui.model.type.Currency'       
													}" 
												/>
												<Text 
													text="{
														parts: [                
															{path: 'invoice>Quantity'},
															{path: 'formatter/currency'}
														],
														type: 'sap.ui.model.type.Currency'       
													}" 
												/>
												<Text 
													text="{
														parts: [                
															{path: 'invoice>Discount'},
															{path: 'formatter/currency'}
														],
														type: 'sap.ui.model.type.Currency'       
														}" 
												/> 
												<Text 
													text="{
														parts: [                
															{path: 'invoice>ExtendedPrice'},
															{path: 'formatter/currency'}
														],
														type: 'sap.ui.model.type.Currency'       
														}" 
												/> 
                   </cells>
                </ColumnListItem>
            </items>
    </Table>
</mvc:View>